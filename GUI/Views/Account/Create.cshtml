@model CQRS.Sample.GUI.Models.CreateAccountViewModel

@{
    ViewBag.Title = "Create account";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Create Account</legend>
        <ul>
            <li>
                @Html.LabelFor(m => m.Email)
                @Html.EditorFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </li>
            <li>
                @Html.LabelFor(m => m.Password1)
                @Html.EditorFor(m => m.Password1)
                @Html.ValidationMessageFor(m => m.Password1)
            </li>
            <li>
                @Html.LabelFor(m => m.Password2)
                @Html.EditorFor(m => m.Password2)
                @Html.ValidationMessageFor(m => m.Password2)
            </li>
        </ul>
        <input type="submit" value="Submit"/>
    </fieldset>
}