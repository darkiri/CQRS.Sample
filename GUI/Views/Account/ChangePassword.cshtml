@model CQRS.Sample.GUI.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
}

<h2>Account</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Change password</legend>
        <ul>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.EditorFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.Password1)
                @Html.EditorFor(m => m.Password1)
                @Html.ValidationMessageFor(m => m.Password1)
            </li>
            <li>
                @Html.LabelFor(m => m.Password2)
                @Html.EditorFor(m => m.Password2)
                @Html.ValidationMessageFor(m => m.Password2)
            </li>
        </ul>
        <input type="submit" value="Submit"/>
    </fieldset>
}